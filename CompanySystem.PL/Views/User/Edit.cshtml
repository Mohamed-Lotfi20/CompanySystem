@model UserViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit User</h1>

<br />
<br />

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="form-group">
        <label class="col-form-label" asp-for="FName"></label>
        <input class="form-control" asp-for="FName"  />
        <span asp-asp-validation-for="FName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="LName"></label>
        <input class="form-control" asp-for="LName"  />
        <span asp-validation-for="LName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input class="form-control" asp-for="PhoneNumber"  />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <input class="btn btn-primary" type="submit" value="Save" /> ||
    <a asp-controller="User" asp-action="Index" class="btn btn-light">Back To List</a>
    || <a asp-controller="User" asp-action="Details" asp-route-id="@Model.id" class="btn btn-light">Back To Details </a>
</form>

@section ValidationScriptSection{
    <partial name="_ValidationScriptsPartial" />
}
