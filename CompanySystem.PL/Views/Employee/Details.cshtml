@model EmployeeViewModel
@{
    ViewData["Title"] = "Employee Details ";
}

<h1>Details Of Employee</h1>

<br /><br />

<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input class="form-control" asp-for="Name" readonly />
    <span asp-asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Email"></label>
    <input class="form-control" asp-for="Email" readonly />
    <span asp-asp-validation-for="Email" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Age"></label>
    <input class="form-control" asp-for="Age" readonly />
    <span asp-asp-validation-for="Age" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Phone"></label>
    <input class="form-control" asp-for="Phone" readonly />
    <span asp-asp-validation-for="Phone" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Address"></label>
    <input class="form-control" asp-for="Address" readonly />
    <span asp-asp-validation-for="Address" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Salary"></label>
    <input class="form-control" asp-for="Salary" readonly />
    <span asp-asp-validation-for="Salary" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="HireDate"></label>
    <input class="form-control" asp-for="HireDate" readonly />
    <span asp-asp-validation-for="HireDate" class="text-danger"></span>
</div>

<div class="form-group">
    <img src="~/Files/Images/@Model.ImageName" class="img-fluid rounded" alt="Employee Image" height="60" width="60">
    <span asp-asp-validation-for="Image" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="IsActive"></label>
    <input class="form-control" asp-for="IsActive" disabled="disabled" /> @*disabled => For ReadOnly*@
    <span asp-asp-validation-for="IsActive" class="text-danger"></span>
</div>

<a asp-controller="Employee" asp-action="Edit" class="btn btn-light" asp-route-id="@Model.Id">Edit</a> ||
<a asp-controller="Employee" asp-action="Index" class="btn btn-light">Back To List</a>

