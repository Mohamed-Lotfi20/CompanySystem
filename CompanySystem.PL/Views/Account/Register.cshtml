@model RegisterViewModel
@{
	ViewData["Title"] = "Register";
	Layout = "~/Views/Shared/MyPartialView/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Register" method="post">
			<div asp-validation-summary="All"></div>
			<input class="text"         asp-for="FName"           type="text" name="FName" placeholder="First Name.." required="">
			<input class="text"         asp-for="LName"           type="text" name="LName" placeholder="Last Name.." required="">
			<input class="text email"   asp-for="Email"           type="email" name="email" placeholder="Email" required="">
			<input class="text"         asp-for="Password"        type="password" name="password" placeholder="Password" required="">
			<input class="text w3lpass" asp-for="ConfirmPassword" type="password" name="ConfirmPassword" placeholder="Confirm Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="IsAgree" type="checkbox" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Don You have an Account? <a asp-controller="Account" asp-action="Login"> Login Now!</a></p>
	</div>
</div>
@section ValidationScriptSection{
	<partial name="_ValidationScriptsPartial" />
}

