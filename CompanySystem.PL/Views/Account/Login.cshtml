@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/MyPartialView/_AuthLayout.cshtml";
}
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login" method="post">
			<div asp-validation-summary="All"></div>
			
			<input class="text email" asp-for="Email" type="email" name="email" placeholder="Email" required="">
			<input class="text" asp-for="Password" type="password" name="password" placeholder="Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" type="checkbox" class="checkbox" required="">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SignIn">
		</form>
		<p>Do not You have an Account? <a asp-controller="Account" asp-action="Register"> Register Now!</a></p>
		<p>Forget Passowrd ? <a asp-controller="Account" asp-action="ForgetPassowrd"> Forget Password..!</a></p>
	</div>
</div>
@section ValidationScriptSection{
	<partial name="_ValidationScriptsPartial" />
}



