@model RoleViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Role</h1>

<br />
<br />

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="form-group">
        <label class="col-form-label" asp-for="RoleName"></label>
        <input class="form-control" asp-for="RoleName" />
        <span asp-asp-validation-for="RoleName" class="text-danger"></span>
    </div>
    <input class="btn btn-primary" type="submit" value="Save" /> ||
    <a asp-controller="Role" asp-action="Index" class="btn btn-light">Back To List</a>
    || <a asp-controller="Role" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-light">Back To Details </a>
</form>

@section ValidationScriptSection{
    <partial name="_ValidationScriptsPartial" />
}

