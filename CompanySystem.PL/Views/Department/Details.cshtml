@model DepartmentViewModel
@{
    ViewData["Title"] = "Department Details ";
}

<h1>Details Of Department</h1>

<br /><br />

    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input class="form-control" asp-for="Code" readonly/>
        <span asp-asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
    <input class="form-control" asp-for="Name" readonly />
        <span asp-asp-validation-for="Name" class="text-danger"></span>
    </div>
<div class="form-group">
    <label class="col-form-label" asp-for="DateOfCreation"></label>
    <input class="form-control" asp-for="DateOfCreation" readonly />
    <span asp-validation-for="DateOfCreation" class="text-danger"></span>
</div> 
<a asp-controller="Department" asp-action="Edit" class="btn btn-light" asp-route-id="@Model.id">Edit</a> || 
